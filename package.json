{
  "name": "CXAI-api-testing-framework",
  "version": "1.0.0",
  "description": "API testing project using Cypress with Jest-style assertions and GitHub Actions integration",
  "scripts": {
    "cy:run": "cypress run",
    "report:merge": "mochawesome-merge cypress/reports/mochawesome/*.json -o cypress/reports/mochawesome/mochawesome.json",
    "report:html": "marge cypress/reports/mochawesome/mochawesome.json -f index -o cypress/reports/mochawesome",
    "report": "npm run report:merge && npm run report:html",
    "test": "npm run cy:run && npm run report"
  },
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "ajv": "^8.12.0",
    "allure-commandline": "^2.34.1",
    "cypress": "^12.17.4",
    "cypress-mochawesome-reporter": "^4.0.2",
    "dotenv": "^16.3.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0"
  },
  "dependencies": {
    "pg": "^8.16.3"
  }
}
